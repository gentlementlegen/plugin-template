{
  "name": "plugin-template",
  "version": "1.0.0",
  "description": "Ubiquibot plugin template repository with TypeScript support.",
  "author": "Ubiquity DAO",
  "license": "MIT",
  "main": "src/worker.ts",
  "type": "module",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "build": "tsc --project tsconfig.json",
    "format": "run-p format:*",
    "check-formatting": "run-p check-formatting:* format:cspell",
    "check-formatting:lint": "eslint --fix-dry-run",
    "format:lint": "eslint --fix . --ignore-pattern dist/",
    "format:prettier": "prettier --write .",
    "check-formatting:prettier": "prettier --check .",
    "format:cspell": "cspell **/*",
    "knip": "knip --config .github/knip.ts",
    "knip-ci": "knip --no-exit-code --reporter json --config .github/knip.ts",
    "prepare": "husky install",
    "test": "cross-env NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --setupFiles dotenv/config --coverage",
    "worker": "wrangler dev --env dev --port 4000"
  },
  "keywords": [
    "typescript",
    "template",
    "dao",
    "ubiquity",
    "open-source"
  ],
  "dependencies": {
    "@sinclair/typebox": "0.32.33",
    "@ubiquity-os/plugin-sdk": "^2.0.6",
    "@ubiquity-os/ubiquity-os-logger": "^1.4.0",
    "dotenv": "16.4.5",
    "hono": "^4.6.16",
    "ts-node": "^10.9.2"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@cspell/dict-node": "5.0.1",
    "@cspell/dict-software-terms": "3.4.6",
    "@cspell/dict-typescript": "3.1.5",
    "@eslint/js": "9.19.0",
    "@jest/globals": "29.7.0",
    "@mswjs/data": "0.16.1",
    "@types/jest": "^29.5.12",
    "@types/node": "20.14.5",
    "cross-env": "^7.0.3",
    "cspell": "8.14.4",
    "eslint": "9.19.0",
    "eslint-plugin-check-file": "2.8.0",
    "eslint-plugin-sonarjs": "3.0.1",
    "husky": "9.0.11",
    "jest": "29.7.0",
    "jest-junit": "16.0.0",
    "jest-md-dashboard": "0.8.0",
    "knip": "5.33.1",
    "lint-staged": "15.2.7",
    "npm-run-all": "4.1.5",
    "prettier": "3.3.3",
    "ts-jest": "29.1.5",
    "typescript": "5.6.2",
    "typescript-eslint": "8.22.0",
    "wrangler": "3.102.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "src/**.{ts,json}": [
      "cspell"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
